<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="styleMainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_vertical_marge</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:padding">@dimen/normal_btn_padding</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="styleMainBtn">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:contentDescription">@string/your_image</item>
    </style>
</resources>